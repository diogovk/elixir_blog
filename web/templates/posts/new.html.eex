<div class="col-xs-3" ></div>
<div class="col-xs-6">
  <h1>Create a new post</h1>
  <%= form_tag(posts_path(@conn, :create), method: :post) %>
    <%= render Blog.PostsView, "_form.html", [conn: @conn, post: @post] %>
    <div class="form-group">
      <input class="btn btn-default" type="submit" value="Create" >
      <a class="pull-right" href="<%= posts_path(@conn, :index) %>">Back to posts</a>
    </div>
  </form>
</div>
<div class="col-xs-3" ></div>
