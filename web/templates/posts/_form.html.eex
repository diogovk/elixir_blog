<div class="form-group">
  <label for="post_title">Title</label>
  <%= text_input @form, :title, [class: "form-control", value: @post.title] %>
</div>
<div class="form-group">
  <label for="post_content">Content</label>
  <textarea class="form-control" id="post_content" name="post[content]" ><%= @post.content %></textarea>
</div>
